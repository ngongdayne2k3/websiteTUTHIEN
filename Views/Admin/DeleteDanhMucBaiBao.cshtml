@model websiteTUTHIEN.Models.TableDanhMucBaiBao

@{
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
    ViewData["Title"] = "Xóa Danh Mục Bài Báo";
}

<link rel="stylesheet" href="~/css/custom.css" />

<div class="container">
    <div class="custom-card">
        <h2>Xóa Danh Mục Bài Báo</h2>
        <p class="text-center">Bạn có chắc chắn muốn xóa danh mục bài báo sau?</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Tên danh mục</dt>
            <dd class="col-sm-9">@Model.TenDanhMucBaiBao</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.MotaDanhMuc</dd>
        </dl>
        <form asp-action="DeleteDanhMucBaiBao" asp-controller="Admin" method="post" style="display: flex; flex-direction: column; align-items: center;">
            <input type="hidden" asp-for="MaDanhMucBaiBao" />
            <div class="form-group" style="display: flex; gap: 10px;">
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="@Url.Action("IndexDanhMucBaiBao", "DanhMucBaiBao")" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>
