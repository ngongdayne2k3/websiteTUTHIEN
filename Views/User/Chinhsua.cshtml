@model websiteTUTHIEN.Models.TableNguoiDung

@{
    ViewData["Title"] = "Chỉnh Sửa Người Dùng";
}

<body>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .custom-card {
            margin: 50px auto;
            max-width: 700px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #343a40;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-custom {
            background-color: #198754;
            color: white;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #146c43;
                color: white;
            }
    </style>
    <div class="container">
        <div class="custom-card">
            <h2>Chỉnh Sửa Thông Tin Người Dùng</h2>
            <form asp-action="Chinhsua" method="post">
                <input type="hidden" asp-for="MaNguoiDung" />
                <div class="form-group">
                    <label for="TenNguoiDung">Tên Người Dùng</label>
                    <input type="text" class="form-control" id="TenNguoiDung" asp-for="TenNguoiDung" required />
                </div>
                <div class="form-group">
                    <label for="AvatarNguoiDung">Avatar (URL)</label>
                    <input type="text" class="form-control" id="AvatarNguoiDung" asp-for="AvatarNguoiDung" />
                </div>
                <div class="form-group">
                    <label for="TenTk">Tên Tài Khoản</label>
                    <input type="text" class="form-control" id="TenTk" asp-for="TenTk" required />
                </div>
                <div class="form-group">
                    <label for="MatKhau">Mật Khẩu</label>
                    <input type="password" class="form-control" id="MatKhau" asp-for="MatKhau" required />
                </div>
                <div class="form-group">
                    <label for="SdtnguoiDung">Số Điện Thoại</label>
                    <input type="number" class="form-control" id="SdtnguoiDung" asp-for="SdtnguoiDung" />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" asp-for="Email" required />
                </div>
                <div class="form-group">
                    <label for="DiaChi">Địa Chỉ</label>
                    <input type="text" class="form-control" id="DiaChi" asp-for="DiaChi" />
                </div>
                <div class="form-group">
                    <label for="NamSinh">Năm Sinh</label>
                    <input type="date" class="form-control" id="NamSinh" asp-for="NamSinh" />
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a class="btn btn-secondary" asp-action="NguoiDung">Hủy</a>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
