@model TableNguoiDung
@{
    ViewData["Title"] = "Chỉnh sửa";
}
<h2>Chỉnh sửa thông tin cá nhân</h2>

<form asp-action="EditProfile" method="post">
    <div class="form-group">
        <label for="TenNguoiDung">Tên người dùng</label>
        <input type="text" class="form-control" id="TenNguoiDung" name="TenNguoiDung" value="@Model.TenNguoiDung" required />
    </div>

    <div class="form-group">
        <label for="AvatarNguoiDung">Avatar</label>
        <input type="file" class="form-control" id="AvatarNguoiDung" name="AvatarNguoiDung" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="SdtnguoiDung">Số điện thoại</label>
        <input type="text" class="form-control" id="SdtnguoiDung" name="SdtnguoiDung" value="@Model.SdtnguoiDung" />
    </div>

    <div class="form-group">
        <label for="DiaChi">Địa chỉ</label>
        <input type="text" class="form-control" id="DiaChi" name="DiaChi" value="@Model.DiaChi" />
    </div>


    <div class="form-group">
        <label for="MatKhau">Mật khẩu</label>
        <input type="password" class="form-control" id="MatKhau" name="MatKhau" placeholder="Nhập mật khẩu mới (nếu muốn thay đổi)" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Hủy</a>
</form>
