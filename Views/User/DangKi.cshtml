@model websiteTUTHIEN.Models.TableNguoiDung

@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container">
    <h2>Đăng Ký</h2>
    <form asp-action="DangKi" method="post">
        <!-- Hiển thị lỗi chung -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="TenNguoiDung" class="control-label login-label">Họ và tên:</label>
            <input asp-for="TenNguoiDung" class="form-control login-input" placeholder="Nhập họ và tên" />
            <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label login-label">Email:</label>
            <input asp-for="Email" type="email" class="form-control login-input" placeholder="Nhập email" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TenTk" class="control-label login-label">Tên tài khoản:</label>
            <input asp-for="TenTk" class="form-control login-input" placeholder="Nhập tên tài khoản" autocomplete="username" />
            <span asp-validation-for="TenTk" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MatKhau" class="control-label login-label">Mật khẩu:</label>
            <input asp-for="MatKhau" type="password" class="form-control login-input" placeholder="Nhập mật khẩu" autocomplete="new-password" />
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đăng Ký</button>
        </div>
        <p>Đã có tài khoản? <a asp-action="DangNhap">Đăng nhập ngay</a></p>
    </form>
</div>
