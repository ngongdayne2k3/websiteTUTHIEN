@model websiteTUTHIEN.Models.VnPay.PaymentInformationModel

@{
    ViewData["Title"] = "Create Payment";
}

<h2>Create Payment</h2>

<form asp-action="CreatePaymentUrlVnpay" method="post">
    <div class="form-group">
        <label for="Name">Your Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Amount">Amount (VND)</label>
        <input type="number" class="form-control" id="Amount" name="Amount" required />
    </div>
    <div class="form-group">
        <label for="OrderDescription">Order Description</label>
        <textarea class="form-control" id="OrderDescription" name="OrderDescription" required></textarea>
    </div>

    <!-- Hidden input for OrderType -->
    <input type="hidden" id="OrderType" name="OrderType" value="other" />

    <button type="submit" class="btn btn-primary">Proceed to Payment</button>
</form>
